# AppCompatCheck Production Environment Configuration
# Copy this file to .env.production and update with your production values

# ====================================
# Application Configuration
# ====================================
NODE_ENV=production
APP_URL=https://appcompatcheck.com
APP_NAME="AppCompatCheck"
APP_VERSION=1.0.0

# ====================================
# Next.js Configuration
# ====================================
NEXTAUTH_URL=https://appcompatcheck.com
NEXTAUTH_SECRET=your-super-secure-nextauth-secret-here-change-this

# ====================================
# Database Configuration
# ====================================
# PostgreSQL Database
DATABASE_URL=postgresql://appcompat:your-secure-db-password@postgres:5432/appcompatcheck
POSTGRES_USER=appcompat
POSTGRES_PASSWORD=your-secure-db-password
POSTGRES_DB=appcompatcheck

# Database Pool Configuration
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# ====================================
# Redis Configuration
# ====================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-secure-redis-password

# ====================================
# Authentication & Security
# ====================================
JWT_SECRET=your-super-secure-jwt-secret-here-256-bits-minimum
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-here
SESSION_MAX_AGE=86400

# Encryption Keys
ENCRYPTION_KEY=your-32-character-encryption-key-here
HASH_SALT_ROUNDS=12

# ====================================
# Email Configuration
# ====================================
# SMTP Settings
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@your-domain.com
SMTP_PASS=your-email-password

# Email Templates
FROM_EMAIL=noreply@appcompatcheck.com
FROM_NAME="AppCompatCheck"
SUPPORT_EMAIL=support@appcompatcheck.com

# ====================================
# Storage Configuration
# ====================================
# MinIO/S3 Configuration
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_BUCKET=appcompat-storage
S3_REGION=us-east-1

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=.pdf,.docx,.xlsx,.csv,.json,.xml,.txt

# ====================================
# Third-Party Integrations
# ====================================
# GitHub Integration
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret

# Snyk Integration
SNYK_API_TOKEN=your-snyk-api-token
SNYK_ORG_ID=your-snyk-org-id

# Jira Integration
JIRA_BASE_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-jira-username
JIRA_API_TOKEN=your-jira-api-token

# Jenkins Integration
JENKINS_URL=https://your-jenkins-url
JENKINS_USERNAME=your-jenkins-username
JENKINS_API_TOKEN=your-jenkins-api-token

# GitLab Integration
GITLAB_URL=https://gitlab.com
GITLAB_ACCESS_TOKEN=your-gitlab-access-token

# ====================================
# Monitoring & Logging
# ====================================
# Application Monitoring
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/appcompat/app.log
LOG_MAX_FILES=10
LOG_MAX_SIZE=10m

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# ====================================
# Rate Limiting
# ====================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_ENABLED=true

# API Rate Limits
API_RATE_LIMIT_WINDOW=3600000
API_RATE_LIMIT_MAX=1000

# ====================================
# Notification Configuration
# ====================================
# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
SLACK_BOT_TOKEN=your-slack-bot-token

# Microsoft Teams
TEAMS_WEBHOOK_URL=https://your-teams-webhook-url

# ====================================
# AI/ML Configuration
# ====================================
# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000

# ====================================
# Backup Configuration
# ====================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=appcompat-backups

# ====================================
# SSL/TLS Configuration
# ====================================
SSL_CERT_PATH=/etc/letsencrypt/live/appcompatcheck.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/appcompatcheck.com/privkey.pem
SSL_CHAIN_PATH=/etc/letsencrypt/live/appcompatcheck.com/chain.pem

# ====================================
# Performance Configuration
# ====================================
# Caching
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
REDIS_CACHE_TTL=7200

# Database Connection Pool
DB_CONNECTION_TIMEOUT=10000
DB_STATEMENT_TIMEOUT=30000
DB_QUERY_TIMEOUT=60000

# ====================================
# Feature Flags
# ====================================
ENABLE_MULTI_TENANCY=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_FILE_PROCESSING=true
ENABLE_REPORT_GENERATION=true
ENABLE_INTEGRATIONS=true
ENABLE_NOTIFICATIONS=true
ENABLE_MONITORING=true
ENABLE_AUDIT_LOGGING=true

# ====================================
# Security Headers
# ====================================
SECURITY_HEADERS_ENABLED=true
CORS_ORIGIN=https://appcompatcheck.com
CSRF_SECRET=your-csrf-secret-here

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_URI=/api/csp-report

# ====================================
# Development/Debug (Disable in Production)
# ====================================
DEBUG_MODE=false
ENABLE_SWAGGER=false
ENABLE_GRAPHQL_PLAYGROUND=false
LOG_SQL_QUERIES=false

# ====================================
# Container Configuration
# ====================================
CONTAINER_MEMORY_LIMIT=2048m
CONTAINER_CPU_LIMIT=1000m
WORKER_PROCESSES=auto
MAX_CONNECTIONS=1024