# Database
DATABASE_URL="postgresql://username:password@localhost:5432/appcompatcheck"
DIRECT_URL="postgresql://username:password@localhost:5432/appcompatcheck"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# Email (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
EMAIL_FROM="noreply@appcompatcheck.com"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="AppCompatCheck"
NEXT_PUBLIC_APP_DESCRIPTION="Enterprise Compatibility Analysis Platform"

# File Upload
UPLOAD_MAX_SIZE="10485760" # 10MB
ALLOWED_FILE_TYPES="js,ts,jsx,tsx,py,java,cs,cpp,c,h,hpp,php,rb,go,rs"

# Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000" # 15 minutes

# Monitoring
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn"

# Integration APIs
GITHUB_TOKEN="your-github-personal-access-token"
GITLAB_TOKEN="your-gitlab-personal-access-token"
BITBUCKET_TOKEN="your-bitbucket-app-password"
JIRA_URL="https://your-domain.atlassian.net"
JIRA_EMAIL="your-email@domain.com"
JIRA_TOKEN="your-jira-api-token"
SLACK_BOT_TOKEN="xoxb-your-slack-bot-token"
SLACK_SIGNING_SECRET="your-slack-signing-secret"
TEAMS_WEBHOOK_URL="https://your-teams-webhook-url"

# Security
ENCRYPTION_KEY="your-32-character-encryption-key"
CORS_ORIGINS="http://localhost:3000,https://yourdomain.com"

# Features
FEATURE_AI_ANALYSIS="true"
FEATURE_REAL_TIME_SCANNING="true"
FEATURE_ADVANCED_REPORTING="true"
FEATURE_INTEGRATIONS="true"

# Limits
MAX_ORGANIZATIONS_PER_USER="5"
MAX_SCANS_PER_MONTH="1000"
MAX_TEAM_MEMBERS="50"

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# External Services
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"

# Webhook
WEBHOOK_SECRET="your-webhook-secret"

# Development
NODE_ENV="development"
DEBUG="appcompatcheck:*"